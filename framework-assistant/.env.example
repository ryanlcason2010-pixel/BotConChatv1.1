# OpenAI API Configuration
# Required: Your OpenAI API key for embeddings and LLM
OPENAI_API_KEY=sk-your-api-key-here

# Database Configuration
# Path to the SQLite database file (default: frameworks.db)
DATABASE_PATH=frameworks.db

# Logging Configuration
# Path to the feedback log file (default: logs/feedback.json)
FEEDBACK_LOG_FILE=logs/feedback.json

# LLM Configuration
# OpenAI model to use for chat completions (default: gpt-4o-mini)
OPENAI_LLM_MODEL=gpt-4o-mini

# Temperature for LLM responses (default: 0.3)
LLM_TEMPERATURE=0.3

# Max tokens for short LLM responses (default: 500)
LLM_MAX_TOKENS_SHORT=500

# Max tokens for long LLM responses (default: 1000)
LLM_MAX_TOKENS_LONG=1000

# Embedding Configuration
# OpenAI embedding model (default: text-embedding-3-small)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Embedding dimensions (default: 1536)
EMBEDDING_DIMENSIONS=1536

# Path to embeddings cache file (default: cache/embeddings_cache.pkl)
EMBEDDINGS_CACHE_FILE=cache/embeddings_cache.pkl

# Enable/disable embedding cache (default: true)
ENABLE_EMBEDDING_CACHE=true

# Search Configuration
# Number of top results to return (default: 5)
SEARCH_TOP_K=5

# Minimum similarity score threshold (default: 0.6)
SEARCH_MIN_SIMILARITY=0.6
